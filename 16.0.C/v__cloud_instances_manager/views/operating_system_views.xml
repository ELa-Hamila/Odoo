<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_operating_system" model="ir.actions.act_window">
            <field name="name">Operating system</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">operating.system</field>
            <field name="view_mode">tree</field>
        </record>
        <record id="operating_system_tree" model="ir.ui.view">
            <field name="name">operating.system.tree</field>
            <field name="model">operating.system</field>
            <field name="arch" type="xml">
                <tree editable="bottom">
                    <field name="name"/>
                </tree>
            </field>
        </record>
    </data>
</odoo>